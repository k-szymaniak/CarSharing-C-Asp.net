@model SLE_System.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>


<div class="container justify-content-center">
<div class="row">
	<aside class="col-sm-4">
            <div class="card">
                <article class="card-body">
                    <a href="/Account/Login" class="float-right btn btn-outline-primary">Sign in</a>
                        <h4 class="card-title mb-4 mt-1">Sign up</h4>
	                        <form method="post">
                                     <div class="form-group ">
    	                                 <label asp-for="UserName">Your username</label>
                                         <input asp-for="UserName" class="form-control" placeholder="UserName" type="text">
                                         <span asp-validation-for="UserName" class="text-danger"></span>
                                     </div> 
                                      <div class="form-group ">
    	                                 <label asp-for="Email">Your email</label>
                                         <input asp-for="Email" class="form-control" placeholder="Email" type="email">
                                         <span asp-validation-for="Email" class="text-danger"></span>
                                     </div> 
                                     <div class="form-group">
    	                                     <!-- <a class="float-right" href="#">Forgot?</a> //-->
    	                                    <label asp-for="Password">Your password</label>
                                            <input asp-for="Password" class="form-control" placeholder="******" type="password">
                                     </div> 
                                                                          <div class="form-group">
    	                                     <!-- <a class="float-right" href="#">Forgot?</a> //-->
    	                                    <label asp-for="ConfirmPassword">Confirm password</label>
                                            <input asp-for="ConfirmPassword" class="form-control" placeholder="******" type="password">
                                     </div> 
                                     
    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Register  </button>
    </div>                                                          
</form>
</article>
</div>
    </aside>
</div>
</div>
